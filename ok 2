<!-- Các phần còn lại giữ nguyên như cũ -->
<script>
let isAdmin = false;
let adminEmail = "admin@example.com";

function login() {
  const email = document.getElementById('login-email').value;
  document.getElementById('main-nav').style.display = 'flex';
  isAdmin = email === adminEmail;
  showSection('home-after-login');
}

function renderThiep() {
  const chuRe = document.getElementById('chu-re').value;
  const coDau = document.getElementById('co-dau').value;
  const khach = document.getElementById('ten-khach-moi').value;
  const trai = document.getElementById('nha-trai').value;
  const gai = document.getElementById('nha-gai').value;
  const font = document.getElementById('font-style').value;
  const color = document.getElementById('color-text').value;
  const bold = document.getElementById('bold').checked ? 'bold' : 'normal';
  const italic = document.getElementById('italic').checked ? 'italic' : 'normal';
  
  const html = `
    <div style="font-family: ${font}; color: ${color}; font-weight: ${bold}; font-style: ${italic};">
      <h1>THIỆP MỜI</h1>
      <p>Trân trọng kính mời: <strong>${khach}</strong></p>
      <p>Đến dự lễ thành hôn của:</p>
      <p><strong>${chuRe}</strong> & <strong>${coDau}</strong></p>
      <p>Nhà trai: ${trai}</p>
      <p>Nhà gái: ${gai}</p>
    </div>`;
  document.getElementById('preview-thiep').innerHTML = html;
}

// Thêm quyền xóa sản phẩm nếu là admin
function hienThiSanPham() {
  const ds = document.getElementById('danh-sach-san-pham');
  ds.innerHTML = '';
  sanPham.forEach((sp, i) => {
    ds.innerHTML += `
      <div class='product'>
        <img src="${sp.img}" />
        <p><strong>${sp.ten}</strong> - ${sp.gia}đ</p>
        <input placeholder="Tên bạn" id="ten-khach-${i}" />
        <input placeholder="SĐT" id="sdt-khach-${i}" />
        <input placeholder="Địa chỉ" id="dc-khach-${i}" />
        <button onclick="xacNhanMua(${i})">🛒 Mua</button>
        ${isAdmin ? `<button onclick="xoaSanPham(${i})">❌ Xóa</button>` : ''}
      </div>`;
  });
}

function xoaSanPham(i) {
  if (confirm("Bạn có chắc muốn xóa?")) {
    sanPham.splice(i, 1);
    localStorage.setItem('sanPham', JSON.stringify(sanPham));
    hienThiSanPham();
  }
}
</script>
