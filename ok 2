<body>

<nav id="main-nav">
  <a href="#" onclick="showSection('home-after-login')">🏠 Trang chủ</a>
  <a href="#" onclick="showSection('tao-thiep')">💌 Thiệp Cưới</a>
  <a href="#" onclick="showSection('mua-qua')">🎁 Mua Quà</a>
  <a href="#" onclick="showSection('thue-do')">🧥 Thuê Đồ</a>
  <a href="#" onclick="showSection('don-hang')">📦 Đơn Hàng</a>
  <a href="#" onclick="showSection('ho-so')">👤 Hồ Sơ</a>
</nav>

<div class="section active" id="home">
  <div class="card">
    <h2>Đăng Nhập</h2>
    <input type="text" id="login-user" placeholder="Tên đăng nhập">
    <input type="password" id="login-pass" placeholder="Mật khẩu">
    <button onclick="login()">Đăng nhập</button>
  </div>
</div>

<div class="section" id="home-after-login">
  <div class="card">
    <h2>Chào mừng <span id="welcome-user"></span>!</h2>
  </div>
</div>

<div class="section" id="mua-qua">
  <div class="card">
    <h2>Sản phẩm</h2>
    <button onclick="toggleFormSanPham()">+ Thêm sản phẩm</button>
    <div id="form-san-pham">
      <input type="file" onchange="loadImage(event, 'sp-img')">
      <input id="ten-sp" placeholder="Tên sản phẩm">
      <input id="gia-sp" placeholder="Giá">
      <button onclick="luuSanPham()">Lưu sản phẩm</button>
    </div>
  </div>
  <div class="card">
    <div id="danh-sach-san-pham"></div>
  </div>
</div>

<div class="section" id="ho-so">
  <div class="card">
    <h2>Hồ Sơ Cá Nhân</h2>
    <input id="profile-name" placeholder="Tên đăng nhập">
    <input id="profile-bank" placeholder="Số tài khoản ngân hàng">
    <button onclick="luuHoSo()">Cập nhật</button>
  </div>
</div>

<script>
let sanPham = JSON.parse(localStorage.getItem('sanPham')) || [];
let currentUser = localStorage.getItem('currentUser') || '';
let isAdmin = false;

function showSection(id) {
  document.querySelectorAll('.section').forEach(el => el.classList.remove('active'));
  document.getElementById(id).classList.add('active');
  if (id === 'mua-qua') hienThiSanPham();
  if (id === 'ho-so') napHoSo();
}

function login() {
  const user = document.getElementById('login-user').value;
  const pass = document.getElementById('login-pass').value;
  if (user === 'anhthanh' && pass === '123') {
    isAdmin = true;
  }
  currentUser = user;
  localStorage.setItem('currentUser', user);
  document.getElementById('main-nav').style.display = 'flex';
  document.getElementById('welcome-user').textContent = user;
  showSection('home-after-login');
}

function toggleFormSanPham() {
  const form = document.getElementById('form-san-pham');
  form.style.display = form.style.display === 'block' ? 'none' : 'block';
}

function loadImage(event, key) {
  const reader = new FileReader();
  reader.onload = () => localStorage.setItem(key, reader.result);
  reader.readAsDataURL(event.target.files[0]);
}

function luuSanPham() {
  const ten = document.getElementById('ten-sp').value;
  const gia = document.getElementById('gia-sp').value;
  const img = localStorage.getItem('sp-img');
  if (ten && gia && img) {
    sanPham.push({ ten, gia, img });
    localStorage.setItem('sanPham', JSON.stringify(sanPham));
    hienThiSanPham();
    document.getElementById('form-san-pham').reset();
  }
}

function hienThiSanPham() {
  const ds = document.getElementById('danh-sach-san-pham');
  ds.innerHTML = '';
  sanPham.forEach((sp, i) => {
    ds.innerHTML += `
      <div class='product'>
        <img src="${sp.img}" />
        <p><strong>${sp.ten}</strong> - ${sp.gia}đ</p>
        ${isAdmin ? `<button onclick="xoaSanPham(${i})">Xóa</button>` : ''}
      </div>`;
  });
}

function xoaSanPham(i) {
  if (!isAdmin) return;
  sanPham.splice(i, 1);
  localStorage.setItem('sanPham', JSON.stringify(sanPham));
  hienThiSanPham();
}

function napHoSo() {
  const name = localStorage.getItem(`profile-${currentUser}-name`) || '';
  const bank = localStorage.getItem(`profile-${currentUser}-bank`) || '';
  document.getElementById('profile-name').value = name;
  document.getElementById('profile-bank').value = bank;
}

function luuHoSo() {
  const name = document.getElementById('profile-name').value;
  const bank = document.getElementById('profile-bank').value;
  localStorage.setItem(`profile-${currentUser}-name`, name);
  localStorage.setItem(`profile-${currentUser}-bank`, bank);
  alert('Cập nhật hồ sơ thành công!');
}
</script>

</body>
</html>
